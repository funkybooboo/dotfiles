#!/usr/bin/env bash
set -euo pipefail

echo "üîê Starting system audit..."

# Log file
LOG_DIR="$HOME/audit_logs"
mkdir -p "$LOG_DIR"
TIMESTAMP="$(date +%F_%T)"
LOG_FILE="$LOG_DIR/audit_$TIMESTAMP.log"

# Function to run a command and log its output
run_and_log() {
    echo "‚û§ $*" | tee -a "$LOG_FILE"
    "$@" 2>&1 | tee -a "$LOG_FILE"
    echo | tee -a "$LOG_FILE"
}

echo "üìù Audit started at $TIMESTAMP" | tee -a "$LOG_FILE"
echo "Saving logs to: $LOG_FILE"
echo | tee -a "$LOG_FILE"

# -----------------------------
# üîç Run chkrootkit
# -----------------------------
if command -v chkrootkit &>/dev/null; then
    run_and_log sudo chkrootkit
else
    echo "‚ö†Ô∏è chkrootkit not found!" | tee -a "$LOG_FILE"
fi

# -----------------------------
# üîç Run Lynis
# -----------------------------
if command -v lynis &>/dev/null; then
    run_and_log sudo lynis audit system --quiet
else
    echo "‚ö†Ô∏è lynis not found!" | tee -a "$LOG_FILE"
fi

# -----------------------------
# ü¶† Run ClamAV scan (optional)
# -----------------------------
if command -v clamscan &>/dev/null; then
    echo "ü¶† Running ClamAV scan (home directory only)..." | tee -a "$LOG_FILE"
    run_and_log clamscan -r "$HOME"
else
    echo "‚ÑπÔ∏è ClamAV not installed or clamscan not found ‚Äî skipping AV scan." | tee -a "$LOG_FILE"
fi

# -----------------------------
# ‚úÖ Finish
# -----------------------------
echo "‚úÖ Audit complete. Log file: $LOG_FILE"

