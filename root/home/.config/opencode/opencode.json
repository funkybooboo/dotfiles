{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-gemini-auth@latest"],
  "theme": "system",
  "agent": {
    "build": {
      "description": "Default coding assistant - fast and efficient",
      "mode": "primary",
      "prompt": "{file:~/.config/opencode/prompts/default.txt}",
      "temperature": 0.3,
      "color": "warning"
    },
    "tdd": {
      "description": "Strict TDD mode - tests first, roadmap-driven",
      "mode": "primary",
      "prompt": "{file:~/.config/opencode/prompts/tdd.txt}",
      "temperature": 0.25,
      "color": "warning"
    },
    "explanatory": {
      "description": "Educational mode with detailed reasoning and explanations",
      "mode": "primary",
      "prompt": "{file:~/.config/opencode/prompts/explanatory.txt}",
      "temperature": 0.45,
      "color": "success"
    },
    "learning": {
      "description": "Interactive teaching mode - learn by doing",
      "mode": "primary",
      "prompt": "{file:~/.config/opencode/prompts/learning.txt}",
      "temperature": 0.55,
      "color": "success"
    }
  },
  "permission": {
    "read": {
      "*": "allow",
      "**/.env": "deny",
      "**/.env.*": "deny",
      "**/.env.local": "deny",
      "**/.env.production": "deny",
      "**/.env.development": "deny",
      "**/.env.test": "deny",
      "**/.env.example": "allow",
      "**/.env.*.example": "allow",
      "**/*.pem": "deny",
      "**/*.key": "deny",
      "**/*.p12": "deny",
      "**/*.pfx": "deny",
      "**/*.cer": "deny",
      "**/*.crt": "deny",
      "**/secrets/**": "deny",
      "**/credentials/**": "deny",
      "**/*credentials*.json": "deny",
      "**/*secret*.json": "deny",
      "**/*secret*.yaml": "deny",
      "**/*secret*.yml": "deny",
      "**/*token*": "deny",
      "**/*bearer*": "deny",
      "**/*password*.txt": "deny",
      "**/*passwd*.txt": "deny",
      "**/.aws/credentials": "deny",
      "**/.aws/config": "deny",
      "**/.kube/config": "deny",
      "**/.ssh/id_*": "deny",
      "**/.ssh/*_rsa*": "deny",
      "**/.ssh/*_dsa*": "deny",
      "**/.ssh/*_ecdsa*": "deny",
      "**/.ssh/*_ed25519*": "deny",
      "**/.gnupg/**": "deny",
      "**/keystore": "deny",
      "**/*.keystore": "deny",
      "**/.npmrc": "deny",
      "**/.pypirc": "deny",
      "**/auth.json": "deny",
      "**/.netrc": "deny",
      "**/.git-credentials": "deny",
      "**/master.key": "deny",
      "**/id_rsa": "deny",
      "**/id_dsa": "deny",
      "**/id_ecdsa": "deny",
      "**/id_ed25519": "deny",
      "**/firebase-adminsdk-*.json": "deny",
      "**/gcloud-service-key.json": "deny",
      "**/client_secret*.json": "deny",
      "**/database.yml": "deny"
    },
    "list": "allow",
    "glob": "allow",
    "grep": "allow",
    "webfetch": "ask",
    "websearch": "allow",
    "codesearch": "allow",
    "edit": {
      "*": "ask",
      "**/*.md": "allow",
      "**/*.mdx": "allow",
      "**/README*": "allow",
      "**/CHANGELOG*": "allow",
      "**/CONTRIBUTING*": "allow",
      "**/LICENSE*": "allow",
      "**/test.py": "allow",
      "**/test_*.py": "allow",
      "**/*_test.py": "allow",
      "/tmp/**": "allow",
      "tmp/**": "allow",
      "**/tmp/**": "allow",
      "**/.git/**": "deny",
      "**/node_modules/**": "deny",
      "**/package-lock.json": "deny",
      "**/yarn.lock": "deny",
      "**/pnpm-lock.yaml": "deny",
      "**/bun.lockb": "deny",
      "**/Cargo.lock": "deny",
      "**/Gemfile.lock": "deny",
      "**/poetry.lock": "deny",
      "**/composer.lock": "deny",
      "**/Pipfile.lock": "deny"
    },
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git log*": "allow",
      "git diff*": "allow",
      "git show*": "allow",
      "git branch*": "allow",
      "git remote*": "allow",
      "git ls-files*": "allow",
      "npm list*": "allow",
      "npm outdated*": "allow",
      "npm view*": "allow",
      "yarn list*": "allow",
      "pnpm list*": "allow",
      "npm test*": "allow",
      "npm run test*": "allow",
      "bun test*": "allow",
      "cargo test*": "allow",
      "pytest*": "allow",
      "python -m pytest*": "allow",
      "go test*": "allow",
      "npm run build": "allow",
      "cargo build*": "allow",
      "cargo clippy*": "allow",
      "tsc --noEmit*": "allow",
      "go build*": "allow",
      "biome check*": "allow",
      "biome ci*": "allow",
      "ruff check*": "allow",
      "eslint*": "allow",
      "npx biome*": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "grep *": "allow",
      "find *": "allow",
      "wc *": "allow",
      "docker ps*": "allow",
      "docker images*": "allow",
      "docker inspect*": "allow",
      "kubectl get*": "allow",
      "kubectl describe*": "allow",
      "which *": "allow",
      "whereis *": "allow",
      "env": "allow",
      "printenv*": "allow",
      "echo *": "allow",
      "date": "allow",
      "pwd": "allow",
      "whoami": "allow",
      "touch /tmp/*": "allow",
      "touch tmp/*": "allow",
      "rm *": "deny",
      "rm -rf*": "deny",
      "dd *": "deny",
      "mkfs*": "deny",
      "fdisk*": "deny",
      "parted*": "deny",
      "> /dev/*": "deny",
      "chmod 777*": "deny",
      "chown root*": "deny"
    },
    "task": {
      "*": "ask",
      "explore": "allow"
    },
    "lsp": "allow",
    "skill": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "question": "allow",
    "external_directory": {
      "*": "ask",
      "/usr/share/doc/**": "allow",
      "/usr/share/man/**": "allow",
      "/tmp/**": "allow",
      "/var/tmp/**": "deny"
    },
    "doom_loop": "ask"
  },
  "provider": {
    "ollama_local": {
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://127.0.0.1:11434/v1"
      },
      "models": {
        "deepseek-coder:6.7b": {
          "_launch": true,
          "name": "deepseek-coder:6.7b"
        },
        "qwen2.5-coder:1.5b": {
          "_launch": true,
          "name": "qwen2.5-coder:1.5b"
        }
      }
    },
    "ollama_remote": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (Remote Kenny)",
      "options": {
        "baseURL": "http://192.168.8.182:11434/v1"
      },
      "models": {
        "qwen3-coder:30b": {
          "_launch": true,
          "name": "qwen3-coder:30b"
        }
      }
    }
  }
}
